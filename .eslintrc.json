{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": false
        }
    },
    "extends": "standard",
    "installedESLint": true,
    "rules": {
        "indent": ["error", 4, {"VariableDeclarator": 4, "SwitchCase": 1}]
    },
    "plugins": [
        "standard",
        "promise"
    ]
}
